<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Products" default-menu-index="2">

    <transition-include name="getProductList" location="component://SimpleScreens/template/product/ProductTransitions.xml"/>

    <subscreens default-item="FindProduct"/>
    <actions>
        <entity-find-one entity-name="mantle.product.Product" value-field="product"/>
    </actions>
    <widgets>
        <link url="FindProduct" text="Return to Find Product" icon="fa fa-angle-double-left" link-type="anchor" style="q-mb-md block text-grey" condition="product"/>
        <section name="SearchProduct" condition="product">
            <actions>
                <set field="productId" value=""/>
            </actions>
            <widgets>
                <form-single name="AddProductItemForm" transition="EditProduct" focus-field="productId" container-style="q-mb-sm rounded-borders">
                    <field name="productId"><default-field title="Product">
                        <drop-down><dynamic-options transition="getProductList" server-search="true" min-length="0" depends-optional="true">
                            <depends-on field="assetClassEnumId"/></dynamic-options></drop-down>
                    </default-field></field>
                    <field name="submitButton"><default-field title="Select"><submit/></default-field></field>
                    <field-layout>
                        <field-row-big>
                            <field-ref name="productId"/>
                            <field-ref name="submitButton"/>
                        </field-row-big>
                    </field-layout>
                </form-single>
            </widgets>
        </section>
        <label text="ProductNameTemplate" text-map="product" type="div" condition="product" style="row q-mb-md text-h3"/>
        <subscreens-panel id="ProductPanel" type="tab"/>
    </widgets>
</screen>
