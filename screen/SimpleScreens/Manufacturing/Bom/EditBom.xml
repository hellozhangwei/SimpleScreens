<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-include="false">

    <parameter name="productId"/>
    <parameter name="productAssocTypeEnumId"/>

    <transition name="updateBom">
        <service-call name="update#mantle.product.ProductAssoc"/>
        <default-response url="."/>
    </transition>
    <transition name="deleteBomItem">
        <service-call name="delete#mantle.product.ProductAssoc"/>
        <default-response url="."/>
    </transition>

    <transition name="addComponent">
        <service-call name="create#mantle.product.ProductAssoc"/>
        <default-response url="."/>
    </transition>
    <transition-include name="getProductList" location="component://SimpleScreens/template/product/ProductTransitions.xml"/>

    <actions>
        <!--        <service-call name="mantle.work.ManufacturingServices.get#ProductBomDetail" in-map="[productId:productId]" out-map="context"/>-->
        <entity-find-one value-field="product" entity-name="mantle.product.Product"/>

        <entity-find entity-name="mantle.product.ProductAssoc" list="parentProdAssocList">
            <econdition field-name="toProductId" from="productId"/>
            <econdition field-name="productAssocTypeEnumId"/>
        </entity-find>
    </actions>

    <widgets>
        <container style="row">
            <link url="../BomFind" text="Return to Find Bom" icon="fa fa-angle-double-left" link-type="anchor" style="q-mb-md text-grey"/>
        </container>

        <label text="${product.productName}:[${product.productId}]" type="h4"/>

        <section name="ParentProdAssocSection">
            <condition>
                <expression>parentProdAssocList?.size()>0</expression>
            </condition>
            <widgets>
                <container-box>
                    <box-header title="This Product is a Component of:"/>
                    <box-body>
                        <form-list name="ParentComponentsForm" list="parentComponents">
                            <entity-find entity-name="mantle.product.Product" list="parentComponents">
                                <econdition field-name="productId" operator="in" from="parentProdAssocList.productId"/>
                            </entity-find>
                            <field name="productId"><default-field title="Component ID">
                                <link url="." text="${productId}" link-type="anchor"/>
                            </default-field></field>
                            <field name="productName"><default-field title="Component"><display/></default-field></field>
                        </form-list>
                    </box-body>
                </container-box>
            </widgets>
        </section>
        <container-box>
            <box-header title="Components of this Product:"/>
            <box-toolbar>
                <container-dialog id="NewBomContainer" button-text="Add Component">

                    <form-single name="NewBomForm" transition="addComponent">
                        <field name="productAssocTypeEnumId">
                            <default-field title="Bom Type">
                                <display-entity entity-name="moqui.basic.Enumeration"/>
                            </default-field>
                        </field>
                        <field name="productId">
                            <default-field title="To Make">
                                <display-entity entity-name="Product" key-field-name="productId"/>
                            </default-field>
                        </field>
                        <field name="toProductId"><default-field title="Component">
                            <drop-down><dynamic-options transition="getProductList" server-search="true" min-length="0" depends-optional="true"/></drop-down>
                        </default-field></field>
                        <field name="quantity"><default-field><text-line/></default-field></field>
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body-nopad>
                <form-list name="ProductBomList" list="productBomList" transition="updateBom" multi="true">
                    <entity-find entity-name="mantle.product.ProductAssoc" list="bomList" distinct="true">
                        <econdition field-name="productId"/>
                        <econdition field-name="productAssocTypeEnumId"/><!--operator="in" from="['PatMfgBom', 'PatEngBom']"-->
                    </entity-find>
                    <field name="productId"><default-field><hidden/></default-field></field>
                    <field name="productAssocTypeEnumId"><default-field><hidden/></default-field></field>
                    <field name="toProductIdDisplay">
                        <default-field title="Component ID"><link url="." text="${toProductId}" parameter-map="[productId:toProductId,productAssocTypeEnumId:productAssocTypeEnumId]" link-type="anchor"/></default-field>
                    </field>
                    <field name="toProductId">
                        <default-field title="Component"><display-entity entity-name="Product" key-field-name="productId" /></default-field>
                    </field>
                    <field name="sequenceNum">
                        <default-field><text-line/></default-field>
                    </field>
                    <field name="quantity">
                        <default-field><text-line/></default-field>
                    </field>
                    <field name="fromDate"><default-field><display/></default-field></field>
                    <field name="thruDate"><default-field><date-time/></default-field></field>
                    <field name="deleteLink">
                        <default-field title="">
                            <link url="deleteBomItem" text="" btn-type="danger" icon="fa fa-trash" confirmation="Really Delete?" link-type="anchor" />
                        </default-field>
                    </field>

                    <field name="submitButton">
                        <default-field><submit text="Update All"/></default-field></field>
                </form-list>
            </box-body-nopad>
        </container-box>


    </widgets>
</screen>