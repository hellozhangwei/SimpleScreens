<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Find Bom" default-menu-include="false">

    <transition name="createBom">
        <service-call name="create#mantle.product.ProductAssoc"/>
        <default-response url="../EditBom"/>
    </transition>

    <widgets>
        <container-dialog id="NewBomContainer" button-text="New Bom">
            <form-single name="NewBomForm" transition="createBom">
                <field name="productAssocTypeEnumId">
                    <default-field title="Bom Type">
                        <widget-template-include location="component://webroot/template/screen/BasicWidgetTemplates.xml#enumDropDown">
                            <set field="enumTypeId" value="ProductAssocType"/><set field="parentEnumId" value="PatComponent"/></widget-template-include>
                    </default-field>
                </field>
                <field name="productId"><default-field title="To Make"><text-line/></default-field></field><!--todo use dropdown-->
                <field name="toProductId"><default-field title="Component"><text-line/></default-field></field><!--todo use dropdown-->
                <field name="quantity"><default-field><text-line/></default-field></field>
                <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
            </form-single>
        </container-dialog>

        <form-list name="BomList" list="bomList" >
            <!--todo how to show top level bom?-->
            <entity-find entity-name="mantle.product.ProductAssoc" list="bomList" distinct="true">
                <econdition field-name="productAssocTypeEnumId" operator="in" from="['PatMfgBom', 'PatEngBom']"/>
                <select-field field-name="productId"/>
            </entity-find>

            <field name="productId1">
                <header-field show-order-by="case-insensitive" title="product ID"><text-find size="10" hide-options="true"/></header-field>
                <default-field><link url="../EditBom" text="${productId}" link-type="anchor" parameter-map="[productId:productId, productAssocTypeEnumId:productAssocTypeEnumId]"/></default-field>
            </field>

            <field name="productId">
                <header-field show-order-by="case-insensitive"><text-find size="10" hide-options="true"/></header-field>
                <default-field><link url="../EditBom" link-type="anchor" entity-key-name="productId" entity-name="Product" parameter-map="[productId:productId]"/></default-field>
            </field>

            <field name="productAssocTypeEnumId">
                <header-field show-order-by="case-insensitive"><text-find size="10" hide-options="true"/></header-field>
                <default-field title="Bom Type"><display-entity entity-name="moqui.basic.Enumeration"/></default-field>
            </field>

            <field name="findButton"><header-field title="Find"><submit/></header-field><default-field>
                <ignored/>
            </default-field></field>
        </form-list>

    </widgets>
</screen>